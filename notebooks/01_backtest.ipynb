"""
LSM-Delta-Hedge â€” Step 5 Backtest + Plots

Run this from repo root (after building lsm_cpp so Python can import it).

This script:
1) downloads SPY (once)
2) computes market features (rolling vol + rf + dividend yield optional) w/ no look-ahead
3) runs one hedging experiment
4) produces desk-style plots and summary tables
5) runs a small parameter sweep (tc_bps, vol_window)

Notes:
- For speed, start with engine paths=20_000; for paper runs use 100_000+.
- Uses only matplotlib (no seaborn).
"""

from __future__ import annotations

import os
import sys
from dataclasses import asdict
from typing import Dict, List, Tuple

import numpy as np
import pandas as pd
import matplotlib.pyplot as plt

# Make local package importable when running from repo root.
REPO_ROOT = os.path.abspath(os.path.join(os.path.dirname(__file__), ".."))
PYTHON_DIR = os.path.join(REPO_ROOT, "python")
if PYTHON_DIR not in sys.path:
    sys.path.insert(0, PYTHON_DIR)

from lsmhedge.data import MarketDataConfig, prepare_market_data, download_yahoo_ohlc
from lsmhedge.hedge import HedgeConfig, run_single_trade_delta_hedge


def plot_spot_and_delta(df: pd.DataFrame, title: str = "Spot vs Delta") -> None:
    fig, ax1 = plt.subplots()
    ax1.plot(df.index, df["S"])
    ax1.set_xlabel("Date")
    ax1.set_ylabel("Spot (S)")

    ax2 = ax1.twinx()
    ax2.plot(df.index, df["stock"])
    ax2.set_ylabel("Hedge Position (shares)")

    fig.suptitle(title)
    fig.tight_layout()
    plt.show()


def plot_book_and_pnl(df: pd.DataFrame, title: str = "Book Value and PnL") -> None:
    fig, ax = plt.subplots()
    ax.plot(df.index, df["book_value"], label="Book Value")
    ax.plot(df.index, df["pnl"], label="PnL")
    ax.set_xlabel("Date")
    ax.set_ylabel("Value")
    ax.set_title(title)
    ax.legend()
    fig.tight_layout()
    plt.show()


def plot_pnl_hist(df: pd.DataFrame, title: str = "Daily PnL Change Histogram", bins: int = 60) -> None:
    fig, ax = plt.subplots()
    x = df["pnl_change"].astype(float).values
    ax.hist(x, bins=bins)
    ax.set_title(title)
    ax.set_xlabel("Daily PnL Change")
    ax.set_ylabel("Frequency")
    fig.tight_layout()
    plt.show()


def compute_market_from_single_download(
    symbol: str,
    start: str,
    end: str,
    vol_window: int,
    trading_days: int = 252,
    rf_mode: str = "constant",
    rf_constant: float = 0.04,
    dividend_yield_mode: str = "none",
) -> pd.DataFrame:
    """
    Helper: download OHLC once, then compute sigma/r/q via prepare_market_data-like logic.
    Keeps this script self-contained for sweeps without re-downloading repeatedly.
    """
    cfg = MarketDataConfig(
        symbol=symbol,
        start=start,
        end=end,
        vol_window=vol_window,
        trading_days=trading_days,
        rf_mode=rf_mode,            # "constant" or "yahoo"
        rf_constant=rf_constant,
        dividend_yield_mode=dividend_yield_mode,
    )
    return prepare_market_data(cfg)


def run_baseline() -> Tuple[pd.DataFrame, Dict[str, float]]:
    # --- Market data ---
    md_cfg = MarketDataConfig(
        symbol="SPY",
        start="2020-01-01",
        end="2024-12-31",
        vol_window=60,
        rf_mode="constant",
        rf_constant=0.04,
        dividend_yield_mode="none",   # switch to "trailing_1y" if you want
    )
    market = prepare_market_data(md_cfg)

    # --- Hedge config ---
    hedge_cfg = HedgeConfig(
        horizon_days=252,
        tc_bps=1.0,   # 1 bp per notional traded
        eps_rel=1e-4,
        engine_cfg={
            "steps": 252,
            "paths": 50_000,          # increase to 100_000+ for paper run
            "train_fraction": 0.5,
            "basis_degree": 2,
            "basis": "Laguerre",
            "antithetic": True,
            "ridge": 1e-8,
            "use_control_variate": True,
        },
        exercise_detection=True,
        exercise_k_stderr=2.0,
        use_cache=False,
    )

    df_path, report = run_single_trade_delta_hedge(market, hedge_cfg)
    return df_path, report


def sweep_tc_and_volwindow(
    symbol: str = "SPY",
    start: str = "2020-01-01",
    end: str = "2024-12-31",
    vol_windows: List[int] = None,
    tc_grid_bps: List[float] = None,
) -> pd.DataFrame:
    if vol_windows is None:
        vol_windows = [20, 60, 120]
    if tc_grid_bps is None:
        tc_grid_bps = [0.0, 0.5, 1.0, 2.0, 5.0]

    rows = []
    for vw in vol_windows:
        market = compute_market_from_single_download(
            symbol=symbol,
            start=start,
            end=end,
            vol_window=vw,
            rf_mode="constant",
            rf_constant=0.04,
            dividend_yield_mode="none",
        )

        for tc in tc_grid_bps:
            hedge_cfg = HedgeConfig(
                horizon_days=252,
                tc_bps=float(tc),
                eps_rel=1e-4,
                engine_cfg={
                    "steps": 252,
                    "paths": 25_000,           # keep sweep light; raise for final
                    "train_fraction": 0.5,
                    "basis_degree": 2,
                    "basis": "Laguerre",
                    "antithetic": True,
                    "ridge": 1e-8,
                    "use_control_variate": True,
                },
                exercise_detection=True,
                exercise_k_stderr=2.0,
                use_cache=True,              # caching helps for sweeps (approx)
            )

            df_path, report = run_single_trade_delta_hedge(market, hedge_cfg)
            rows.append(
                {
                    "vol_window": vw,
                    "tc_bps": tc,
                    **report,
                }
            )

    out = pd.DataFrame(rows)
    # nicer ordering
    cols = ["vol_window", "tc_bps", "final_pnl", "pnl_ann_vol", "sharpe_ann",
            "max_drawdown", "max_drawdown_pct", "VaR_95_daily", "CVaR_95_daily",
            "total_turnover_shares", "total_transaction_cost", "n_days"]
    cols = [c for c in cols if c in out.columns] + [c for c in out.columns if c not in cols]
    out = out[cols]
    return out


def main() -> None:
    # ----- Baseline run -----
    df, report = run_baseline()
    print("\n=== Baseline Report ===")
    for k, v in report.items():
        print(f"{k:>24s}: {v}")

    # Save baseline results
    out_csv = os.path.join(os.path.dirname(__file__), "baseline_path.csv")
    df.to_csv(out_csv)
    print(f"\nSaved baseline path to: {out_csv}")

    # ----- Plots -----
    plot_spot_and_delta(df, title="SPY Spot vs Hedge Shares (Delta Hedge)")
    plot_book_and_pnl(df, title="Hedged Book Value and PnL")
    plot_pnl_hist(df, title="Daily Hedging PnL Changes")

    # ----- Small sweep -----
    sweep = sweep_tc_and_volwindow()
    print("\n=== Sweep Summary (tc_bps x vol_window) ===")
    print(sweep)

    sweep_csv = os.path.join(os.path.dirname(__file__), "sweep_summary.csv")
    sweep.to_csv(sweep_csv, index=False)
    print(f"\nSaved sweep summary to: {sweep_csv}")


if __name__ == "__main__":
    main()

